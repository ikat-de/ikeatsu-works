<!DOCTYPE html>
<html>
  <head>
    <title>IkeatsuWorks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=M+PLUS+1p" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-scrollify@1/jquery.scrollify.min.js"></script>
  </head>

  <body style="font-family: 'M PLUS 1p', sans-serif;background: #e9e9e9">
    <header>
        <a href="#1">
          <%= image_tag @s3+"ikeatsu-works-logo.png", class: 'header-logo' %>
        </a>
      <div class="menu-container">
        <p><a href="#2">WORKS</a></p>
        <p><a href="#3">SKILLS</a></p>
        <p><a href="#4">SERVICE</a></p>
        <p><a href="#5">CONTACT</a></p>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
