<!DOCTYPE html>
<html>
  <head>
    <title>IkeatsuWorks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= display_meta_tags(default_meta_tags) %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">    
    <link href="https://fonts.googleapis.com/css?family=M+PLUS+1p" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-scrollify@1/jquery.scrollify.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.min.js"></script>
    <%= favicon_link_tag('favicon.ico') %>  
    <%= favicon_link_tag('apple-touch-icon-180x180.png', {:rel => 'apple-touch-icon', :sizes => '180x180', :type => 'image/png'}) %>    
  </head>

  <body style="font-family: 'M PLUS 1p', sans-serif;background: #e9e9e9">
    <header>
      <div class="header-container">
        <div>
          <a href="#1">
            <%= image_tag @s3+"ikeatsu-works-logo.png", class: 'header-logo' %>
          </a>
        </div>
        <div class="menu-container">
          <ul>
            <li><a href="#2">WORKS</a></li>
            <li><a href="#3">SKILLS</a></li>
            <li><a href="#4">SERVICE</a></li>
            <li><a href="#5">CONTACT</a></li>
          </ul>
        </div>
      </div>
    </header>
    <div id="nav-toggle">
      <div>
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
    <div id="gloval-nav">
      <nav>
        <ul>
          <li><a href="#1">HOME</a></li>
          <li><a href="#2">WORKS</a></li>
          <li><a href="#3">SKILLS</a></li>
          <li><a href="#4">SERVICE</a></li>
          <li><a href="#5">CONTACT</a></li>
        </ul>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
